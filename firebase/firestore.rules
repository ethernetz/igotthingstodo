rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;

      function belongsTo(userId) {
        return request.auth.uid == userId
      }

      match /users/{userId} {
        allow read, write: if belongsTo(userId);

        match /todos/{document=*} {
          allow read, write: if belongsTo(userId);
        }
      }
    }
  }
}
